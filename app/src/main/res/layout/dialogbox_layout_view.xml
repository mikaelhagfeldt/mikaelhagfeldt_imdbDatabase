<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_dialogbox_layout_view_textView1"
                android:text="Enter movie title to search for"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_centerHorizontal="true"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_dialogbox_layout_view_editText1"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/id_dialogbox_layout_view_textView1"
                android:hint="Ex 'Blade Runner'"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/id_dialogbox_layout_view_button1"
                android:layout_below="@id/id_dialogbox_layout_view_editText1"
                android:text="Begin Search"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>